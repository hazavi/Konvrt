{
  "name": "konvrt",
  "version": "1.0.0",
  "description": "Media converter & compression â€” video, audio, and image processing locally on your machine.",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:astro": "astro dev",
    "build:astro": "astro build",
    "dev:electron": "electron .",
    "dev": "concurrently -k \"npm:dev:astro\" \"npm:dev:electron\"",
    "build": "npm run build:astro && npm run build:electron",
    "build:electron": "electron-builder --win --mac --linux",
    "preview": "astro preview",
    "astro": "astro"
  },
  "build": {
    "appId": "com.konvrt.app",
    "productName": "Konvrt",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "astro": "^5.17.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "mupdf": "^1.27.0",
    "pdfkit": "^0.17.2",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  }
}
