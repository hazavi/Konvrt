<!-- Tools Grid Panel (hidden by default, shown when Tools tab is active) -->
<div id="tools-panel" style="display:none;">
  <!-- Sub-tabs: Convert / Compress -->
  <div class="tools-header">
    <div class="tools-tabs">
      <button class="tools-tab active" data-tools-view="convert">
        <svg
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><polyline points="16 3 21 3 21 8"></polyline><line
            x1="4"
            y1="20"
            x2="21"
            y2="3"></line><polyline points="8 21 3 21 3 16"></polyline><line
            x1="20"
            y1="4"
            x2="3"
            y2="21"></line></svg
        >
        Convert Tools
      </button>
      <button class="tools-tab" data-tools-view="compress">
        <svg
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="M12 3v4m0 14v-4M3 12h4m14 0h-4"></path><rect
            x="8"
            y="8"
            width="8"
            height="8"
            rx="1"></rect></svg
        >
        Compress Tools
      </button>
    </div>
  </div>

  <!-- Converter Tools -->
  <div id="tools-convert" class="tools-section">
    <div class="section-top">
      <p class="section-desc">Convert your media files to any format.</p>
      <div class="tools-categories" data-section="convert">
        <button class="cat-tab active" data-cat="all">All</button>
        <button class="cat-tab" data-cat="video">
          <span class="cat-dot video"></span>Video
        </button>
        <button class="cat-tab" data-cat="audio">
          <span class="cat-dot audio"></span>Audio
        </button>
        <button class="cat-tab" data-cat="image">
          <span class="cat-dot image"></span>Image
        </button>
        <button class="cat-tab" data-cat="gif">
          <span class="cat-dot gif"></span>GIF
        </button>
        <button class="cat-tab" data-cat="pdf">
          <span class="cat-dot pdf"></span>PDF
        </button>
      </div>
    </div>
    <div class="tools-grid" id="tools-convert-grid"></div>
  </div>

  <!-- Compressor Tools -->
  <div id="tools-compress" class="tools-section" style="display:none;">
    <div class="section-top">
      <p class="section-desc">Reduce file sizes while preserving quality.</p>
      <div class="tools-categories" data-section="compress">
        <button class="cat-tab active" data-cat="all">All</button>
        <button class="cat-tab" data-cat="video">
          <span class="cat-dot video"></span>Video
        </button>
        <button class="cat-tab" data-cat="audio">
          <span class="cat-dot audio"></span>Audio
        </button>
        <button class="cat-tab" data-cat="image">
          <span class="cat-dot image"></span>Image
        </button>
        <button class="cat-tab" data-cat="gif">
          <span class="cat-dot gif"></span>GIF
        </button>
      </div>
    </div>
    <div class="tools-grid" id="tools-compress-grid"></div>
  </div>
</div>

<style>
  #tools-panel {
    padding: 0 4px;
  }

  .tools-header {
    margin-bottom: 18px;
  }
  .tools-tabs {
    display: flex;
    gap: 4px;
    padding: 3px;
    background: var(--surface);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    width: fit-content;
  }
  .tools-tab {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 7px 16px;
    border: none;
    border-radius: var(--radius-sm);
    background: transparent;
    color: var(--text-dim);
    font-size: 12.5px;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition);
  }
  .tools-tab:hover {
    color: var(--text-secondary);
  }
  .tools-tab.active {
    background: var(--accent);
    color: #fff;
    box-shadow: 0 1px 4px var(--accent-glow);
  }
  .tools-tab svg {
    opacity: 0.7;
  }
  .tools-tab.active svg {
    opacity: 1;
  }

  .tools-section {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .section-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
  }

  .section-desc {
    font-size: 12px;
    color: var(--text-dim);
    margin: 0;
  }

  .tools-categories {
    display: flex;
    gap: 3px;
    padding: 2px;
    background: var(--surface);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
    width: fit-content;
  }
  .cat-tab {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 5px 12px;
    border: none;
    border-radius: 4px;
    background: transparent;
    color: var(--text-dim);
    font-size: 11px;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition);
  }
  .cat-tab:hover {
    color: var(--text-secondary);
  }
  .cat-tab.active {
    background: var(--surface-3);
    color: var(--text);
  }
  .cat-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }
  .cat-dot.video {
    background: var(--video-color);
  }
  .cat-dot.audio {
    background: var(--audio-color);
  }
  .cat-dot.image {
    background: var(--image-color);
  }
  .cat-dot.gif {
    background: var(--gif-color);
  }
  .cat-dot.pdf {
    background: var(--pdf-color);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(185px, 1fr));
    gap: 8px;
  }

  :global(.tool-card) {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 14px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition);
    position: relative;
    overflow: hidden;
  }
  :global(.tool-card::before) {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.2s;
  }
  :global(.tool-card:hover) {
    border-color: var(--border-hover);
    background: var(--surface-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
  :global(.tool-card:hover::before) {
    opacity: 1;
  }
  :global(.tool-card[data-tool-type="video"]::before) {
    background: linear-gradient(135deg, var(--video-bg) 0%, transparent 60%);
  }
  :global(.tool-card[data-tool-type="audio"]::before) {
    background: linear-gradient(135deg, var(--audio-bg) 0%, transparent 60%);
  }
  :global(.tool-card[data-tool-type="image"]::before) {
    background: linear-gradient(135deg, var(--image-bg) 0%, transparent 60%);
  }
  :global(.tool-card[data-tool-type="pdf"]::before) {
    background: linear-gradient(135deg, var(--pdf-bg) 0%, transparent 60%);
  }

  :global(.tool-card .tool-icon) {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 13px;
    font-weight: 800;
    position: relative;
    z-index: 1;
    letter-spacing: -0.3px;
  }
  :global(.tool-card .tool-icon.video) {
    background: var(--video-bg);
    color: var(--video-color);
  }
  :global(.tool-card .tool-icon.audio) {
    background: var(--audio-bg);
    color: var(--audio-color);
  }
  :global(.tool-card .tool-icon.image) {
    background: var(--image-bg);
    color: var(--image-color);
  }
  :global(.tool-card .tool-icon.gif) {
    background: var(--gif-bg);
    color: var(--gif-color);
  }
  :global(.tool-card .tool-icon.pdf) {
    background: var(--pdf-bg);
    color: var(--pdf-color);
  }

  :global(.tool-card .tool-text) {
    position: relative;
    z-index: 1;
    min-width: 0;
  }
  :global(.tool-card .tool-label) {
    font-size: 12.5px;
    font-weight: 600;
    color: var(--text);
    line-height: 1.3;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  :global(.tool-card .tool-desc) {
    font-size: 10px;
    color: var(--text-dim);
    margin-top: 1px;
  }
</style>
