<div id="file-list"></div>

<!-- Preview modal -->
<div id="preview-modal" class="modal-overlay" style="display:none;">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <button id="preview-close" class="modal-close">
      <svg
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><line x1="18" y1="6" x2="6" y2="18"></line><line
          x1="6"
          y1="6"
          x2="18"
          y2="18"></line></svg
      >
    </button>
    <button id="preview-prev" class="modal-nav modal-prev" title="Previous">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><polyline points="15 18 9 12 15 6"></polyline></svg
      >
    </button>
    <button id="preview-next" class="modal-nav modal-next" title="Next">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><polyline points="9 6 15 12 9 18"></polyline></svg
      >
    </button>
    <div id="preview-body"></div>
    <div id="preview-info" class="preview-info"></div>
  </div>
</div>

<style>
  #file-list {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  :global(.file-card) {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 12px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: default;
    animation: slideUp 0.25s ease-out;
  }
  :global(.file-card:hover) {
    border-color: var(--border-hover);
    background: var(--surface-hover);
  }
  :global(.file-card.done) {
    border-color: rgba(52, 211, 153, 0.2);
    background: linear-gradient(135deg, var(--success-bg) 0%, transparent 60%);
  }
  :global(.file-card.error) {
    border-color: rgba(248, 113, 113, 0.2);
    background: linear-gradient(135deg, var(--error-bg) 0%, transparent 60%);
  }
  :global(.file-card.converting) {
    border-color: rgba(124, 108, 240, 0.3);
    background: linear-gradient(135deg, var(--accent-glow) 0%, transparent 60%);
    animation: progressGlow 2s ease-in-out infinite;
  }

  /* Thumbnail */
  :global(.file-thumb) {
    width: 44px;
    height: 44px;
    border-radius: 6px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--surface-2);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: relative;
    border: 1px solid var(--border);
    transition: border-color var(--transition);
  }
  :global(.file-thumb:hover) {
    border-color: var(--accent);
  }
  :global(.file-thumb img),
  :global(.file-thumb video) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  :global(.file-thumb .thumb-icon) {
    font-size: 20px;
    opacity: 0.5;
  }
  :global(.file-thumb .play-overlay) {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    opacity: 0;
    transition: opacity 0.15s;
    backdrop-filter: blur(1px);
  }
  :global(.file-thumb:hover .play-overlay) {
    opacity: 1;
  }
  :global(.file-thumb .play-overlay svg) {
    width: 16px;
    height: 16px;
    color: white;
  }

  :global(.file-details) {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  :global(.file-name-row) {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  :global(.file-name) {
    font-size: 12.5px;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--text);
  }
  :global(.file-meta) {
    font-size: 10.5px;
    color: var(--text-dim);
  }
  :global(.file-type-badge) {
    font-size: 8px;
    font-weight: 700;
    text-transform: uppercase;
    padding: 1px 6px;
    border-radius: 3px;
    flex-shrink: 0;
    letter-spacing: 0.5px;
  }
  :global(.file-type-badge.video) {
    background: var(--video-bg);
    color: var(--video-color);
  }
  :global(.file-type-badge.audio) {
    background: var(--audio-bg);
    color: var(--audio-color);
  }
  :global(.file-type-badge.image) {
    background: var(--image-bg);
    color: var(--image-color);
  }
  :global(.file-type-badge.pdf) {
    background: var(--pdf-bg);
    color: var(--pdf-color);
  }
  :global(.done-format) {
    font-size: 8px;
    font-weight: 700;
    text-transform: uppercase;
    padding: 1px 5px;
    border-radius: 3px;
    background: var(--success-bg);
    color: var(--success);
    letter-spacing: 0.4px;
    flex-shrink: 0;
    animation: successPop 0.35s ease-out;
  }

  :global(.file-right) {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
  }

  /* Progress bar (horizontal) */
  :global(.progress-bar-wrap) {
    width: 80px;
    height: 3px;
    background: var(--border);
    border-radius: 3px;
    overflow: hidden;
  }
  :global(.progress-bar-fill) {
    height: 100%;
    background: linear-gradient(90deg, var(--accent), var(--accent-light));
    border-radius: 3px;
    transition: width 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 0 6px var(--accent-glow);
  }
  :global(.progress-pct) {
    font-size: 10.5px;
    font-weight: 700;
    color: var(--accent-light);
    min-width: 32px;
    text-align: right;
    font-variant-numeric: tabular-nums;
  }

  :global(.status-icon) {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 700;
  }
  :global(.status-icon.done) {
    background: var(--success-bg);
    color: var(--success);
    border: 1px solid rgba(52, 211, 153, 0.2);
    animation: successPop 0.35s ease-out;
  }
  :global(.status-icon.error) {
    background: var(--error-bg);
    color: var(--error);
    border: 1px solid rgba(248, 113, 113, 0.2);
    animation: successPop 0.35s ease-out;
  }

  :global(.remove-btn) {
    width: 22px;
    height: 22px;
    border: none;
    border-radius: 50%;
    background: transparent;
    color: var(--text-dim);
    font-size: 15px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition);
    flex-shrink: 0;
    opacity: 0;
  }
  :global(.file-card:hover .remove-btn) {
    opacity: 1;
  }
  :global(.remove-btn:hover) {
    background: var(--error-bg);
    color: var(--error);
  }
  :global(.remove-btn:disabled) {
    opacity: 0 !important;
    pointer-events: none;
  }

  /* Preview modal */
  .modal-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
  }
  .modal-content {
    position: relative;
    max-width: 80vw;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    z-index: 1;
    animation: fadeIn 0.2s ease-out;
  }
  .modal-close {
    position: absolute;
    top: -14px;
    right: -14px;
    width: 30px;
    height: 30px;
    border: 1px solid var(--border-hover);
    border-radius: 50%;
    background: var(--surface-2);
    color: var(--text-secondary);
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: all var(--transition);
    backdrop-filter: blur(8px);
  }
  .modal-close:hover {
    background: var(--error-bg);
    border-color: var(--error);
    color: var(--error);
  }
  /* Navigation arrows */
  .modal-nav {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border: 1px solid var(--border);
    border-radius: 50%;
    background: rgba(14, 14, 22, 0.8);
    backdrop-filter: blur(8px);
    color: var(--text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    transition: all var(--transition);
    opacity: 0.6;
  }
  .modal-nav:hover {
    opacity: 1;
    border-color: var(--accent);
    color: var(--text);
    background: rgba(14, 14, 22, 0.95);
  }
  .modal-prev {
    left: 16px;
  }
  .modal-next {
    right: 16px;
  }
  .modal-nav:disabled {
    opacity: 0.15;
    cursor: not-allowed;
    pointer-events: none;
  }
  :global(#preview-body img),
  :global(#preview-body video) {
    max-width: 78vw;
    max-height: 70vh;
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    animation: fadeIn 0.15s ease-out;
  }
  .preview-info {
    font-size: 11.5px;
    color: var(--text-secondary);
    text-align: center;
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
    background: rgba(14, 14, 22, 0.7);
    backdrop-filter: blur(8px);
    padding: 6px 14px;
    border-radius: 20px;
    border: 1px solid var(--border);
  }
  :global(.preview-name) {
    font-weight: 600;
    color: var(--text);
  }
  :global(.preview-size) {
    color: var(--text-dim);
    font-weight: 400;
  }
  :global(.preview-dims) {
    color: var(--text-dim);
    font-weight: 400;
    font-variant-numeric: tabular-nums;
  }
  :global(.preview-counter) {
    color: var(--accent-light);
    font-weight: 600;
    font-variant-numeric: tabular-nums;
  }
</style>
