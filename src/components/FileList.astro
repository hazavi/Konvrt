<div id="file-list"></div>

<!-- Preview modal -->
<div id="preview-modal" class="modal-overlay" style="display:none;">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <button id="preview-close" class="modal-close">Ã—</button>
    <div id="preview-body"></div>
    <div id="preview-info" class="preview-info"></div>
  </div>
</div>

<style>
  #file-list {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  :global(.file-card) {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 12px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all var(--transition);
    cursor: default;
  }
  :global(.file-card:hover) {
    border-color: var(--border-hover);
    background: var(--surface-hover);
  }
  :global(.file-card.done) {
    border-color: rgba(52, 211, 153, 0.3);
    background: var(--success-bg);
  }
  :global(.file-card.error) {
    border-color: rgba(248, 113, 113, 0.3);
    background: var(--error-bg);
  }
  :global(.file-card.converting) {
    border-color: rgba(124, 108, 240, 0.4);
    background: var(--accent-glow);
  }

  /* Thumbnail */
  :global(.file-thumb) {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-sm);
    overflow: hidden;
    flex-shrink: 0;
    background: var(--surface-2);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: relative;
    border: 1px solid var(--border);
  }
  :global(.file-thumb:hover) {
    border-color: var(--accent);
  }
  :global(.file-thumb img),
  :global(.file-thumb video) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  :global(.file-thumb .thumb-icon) {
    font-size: 22px;
    opacity: 0.6;
  }
  :global(.file-thumb .play-overlay) {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.35);
    opacity: 0;
    transition: opacity 0.15s;
  }
  :global(.file-thumb:hover .play-overlay) {
    opacity: 1;
  }
  :global(.file-thumb .play-overlay svg) {
    width: 18px;
    height: 18px;
    color: white;
  }

  :global(.file-details) {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 3px;
  }
  :global(.file-name-row) {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  :global(.file-name) {
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--text);
  }
  :global(.file-meta) {
    font-size: 11px;
    color: var(--text-dim);
  }
  :global(.file-type-badge) {
    font-size: 9px;
    font-weight: 700;
    text-transform: uppercase;
    padding: 1px 6px;
    border-radius: 3px;
    flex-shrink: 0;
    letter-spacing: 0.5px;
  }
  :global(.file-type-badge.video) {
    background: var(--video-bg);
    color: var(--video-color);
  }
  :global(.file-type-badge.audio) {
    background: var(--audio-bg);
    color: var(--audio-color);
  }
  :global(.file-type-badge.image) {
    background: var(--image-bg);
    color: var(--image-color);
  }
  :global(.file-type-badge.pdf) {
    background: var(--pdf-bg);
    color: var(--pdf-color);
  }

  :global(.file-right) {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
  }

  /* Progress bar (horizontal) */
  :global(.progress-bar-wrap) {
    width: 80px;
    height: 4px;
    background: var(--border);
    border-radius: 2px;
    overflow: hidden;
  }
  :global(.progress-bar-fill) {
    height: 100%;
    background: var(--accent);
    border-radius: 2px;
    transition: width 0.3s;
  }
  :global(.progress-pct) {
    font-size: 11px;
    font-weight: 600;
    color: var(--accent-light);
    min-width: 32px;
    text-align: right;
  }

  :global(.status-icon) {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 700;
  }
  :global(.status-icon.done) {
    background: var(--success-bg);
    color: var(--success);
    border: 1px solid rgba(52, 211, 153, 0.25);
  }
  :global(.status-icon.error) {
    background: var(--error-bg);
    color: var(--error);
    border: 1px solid rgba(248, 113, 113, 0.25);
  }

  :global(.remove-btn) {
    width: 24px;
    height: 24px;
    border: none;
    border-radius: 50%;
    background: transparent;
    color: var(--text-dim);
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition);
    flex-shrink: 0;
  }
  :global(.remove-btn:hover) {
    background: var(--error-bg);
    color: var(--error);
  }
  :global(.remove-btn:disabled) {
    opacity: 0.2;
    pointer-events: none;
  }

  /* Preview modal */
  .modal-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
  }
  .modal-content {
    position: relative;
    max-width: 80vw;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    z-index: 1;
  }
  .modal-close {
    position: absolute;
    top: -12px;
    right: -12px;
    width: 30px;
    height: 30px;
    border: 1px solid var(--border);
    border-radius: 50%;
    background: var(--surface);
    color: var(--text);
    font-size: 18px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: all var(--transition);
  }
  .modal-close:hover {
    background: var(--error-bg);
    border-color: var(--error);
    color: var(--error);
  }
  :global(#preview-body img),
  :global(#preview-body video) {
    max-width: 78vw;
    max-height: 70vh;
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
  }
  .preview-info {
    font-size: 12px;
    color: var(--text-secondary);
    text-align: center;
    display: flex;
    align-items: center;
    gap: 0;
    flex-wrap: wrap;
    justify-content: center;
  }
  :global(.preview-name) {
    font-weight: 500;
    color: var(--text);
  }
  :global(.preview-size) {
    color: var(--text-dim);
    font-weight: 400;
  }
</style>
